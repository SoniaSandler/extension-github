{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": ["ES2020", "webworker"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["node", "vite/client"],
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}